<h1>List of Pictures</h1>

<%= link_to "Add a new picture", new_picture_url %>

<ul>
  <% @pictures.each do |picture| %>
    <li>
      <%= image_tag picture.url %>
      <%= link_to 'Show', picture %>
      <%= link_to 'Edit', edit_picture_path(picture) %>
      <%= link_to 'Destroy', picture_path(picture.id), :method => "delete", data: { confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>
